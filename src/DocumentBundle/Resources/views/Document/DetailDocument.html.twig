{% extends '::default/Layout.html.twig' %}

{% block body %}

    <div class="product">
        <div class="container">
            <div class="product-price1">
                <div class="top-sing">
                    <div class="rsidebar span_1_of_left">
                        <section  class="sky-form">
                            <div class="product_right">
                                <div class="tab1">
                                    <ul class="place">
                                        <li class="sort">Actions</li>
                                        <li class="by"><img src="images/do.png" alt=""></li>
                                        <div class="clearfix"> </div>
                                    </ul>
                                    <div class="single-bottom">
                                        <a href="{{ path('liste_document') }}"><p>liste des documents</p></a>
                                        <a href="{{ path('partager_document') }}"><p>partager un document</p></a>
                                        <a href="{{ path('liste_attente_document') }}"><p>mes documents en attente</p></a>
                                    </div>
                                </div>

                        </section>
                    </div>
                    <div class="col-md-5 single-top-in simpleCart_shelfItem">
                        <div class="single-para ">
                            <h4>Titre: {{ doc.titre }} </h4>
                            <h5 class="item_price">Niveau: {{ doc.niveau }} - Mati√©re: {{ doc.matiere }}</h5>
                            <p><h4>Description: </h4> <br>{{ doc.description }}</p>
                            <a href="{{ asset('uploads/' ~ doc.path) }}" class="add-cart item_add">Consulter document</a>
                        </div><br>
                        {{ socialButtons() }}
                        <br><br><br>
                        <table class="table table-striped">

                            <tbody>
                        {% for com in coms %}
                            <tr>
                              <th>{{ com.idUser }}:</th>
                              <td>{{ com.contenu }} <br> {{ com.post | date() }}</td>
                            </tr>
                        {% endfor %}
                            </tbody>
                        </table>
                        <div class="registration_form">
                        <form method="post" action="{{ path('ajouter_commentaire') }}" id="putcomm">
                            <div>
                                <input type="text" class="text" name="idcomm" id="commenter" style="margin-top: 50px" placeholder="commnter le document..." >
                            </div>

                        </form>
                        </div>
                        </div>
                    </div>

                    <div class="clearfix"> </div>

            </div>
        </div>
    </div>
    <!---->


{% endblock %}