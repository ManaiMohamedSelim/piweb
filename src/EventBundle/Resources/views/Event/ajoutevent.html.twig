{% extends 'EventBundle:Event:events.html.twig' %}
{% block eventBody %}
    <div class="col-md-6 span_2_of_3">
        <div class="contact-form">
            {%  form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_row(form.nom, { 'label': 'Titre' }) }}
            {{ form_row(form.type, { 'label': 'Type' }) }}
            {{ form_row(form.typeReservation, { 'label': 'Type de réservation' }) }}
            {{ form_errors(form.prix) }}
            {{ form_label(form.prix,null, {'label_attr':{'class' : 'prixlab'}}) }}
            {{ form_widget(form.prix,{'attr': {'novalidate': 'novalidate', 'class' : 'prix'}}) }}
            {#{{ form_row(form.prix, { 'label': 'Prix', 'attr': {'novalidate': 'novalidate', 'class' : 'prix'} }) }}#}
            {{ form_row(form.dateEvent, { 'label': 'Date' }) }}
            {{ form_row(form.duree, { 'label': 'Durée' }) }}
            {{ form_row(form.lieu, { 'label': 'Localisation' }) }}
            {{ form_row(form.nombre, { 'label': 'Quota' }) }}
            {{ form_row(form.description, { 'label': 'Description' }) }}
            {{ form_row(form.afficheFile, { 'label': 'Affiche' }) }}


            {{ form_end(form) }}

        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('.res').on('change',function() {
                var content = $('.res').val();
                if (content == "Gratuite"){
                    $(".prix").hide();
                    $(".prixlab").hide();
                }
                else {
                    $(".prix").show();
                    $(".prixlab").show();
                }
            });
        });
        $(document).ready(function() {
            $('.res').on('keyup',function() {
                var content = $('.res').val();
                if (content == "Gratuite"){
                    $(".prix").hide();
                    $(".prixlab").hide();
                }
                else {
                    $(".prix").show();
                    $(".prixlab").show();
                }
            });
        });
    </script>
{%  endblock %}