{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="login_sec">
    <div class="container">
        <br><br>
        <h2>Login</h2>
        <div class="col-md-6 log">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div>
                    <label>
                        <input type="text" placeholder="UserName" tabindex="1" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </label>
                </div>
                <div>
                    <label>
                        <input type="password" placeholder="Password" tabindex="2" id="password" name="_password" required="required" autocomplete="current-password" />
                    </label>
                </div>
                <input type="submit" id="_submit" name="_submit" value="Se connecter" />
                <a class="acount-btn" href="{{ path ('fos_user_registration_register') }}">Cr√©er un compte</a>
            </form>
            <a href="{{ path ('fos_user_resetting_request') }}">Mot de passe perdu?</a>

        </div>

        <div class="clearfix"></div>
    </div>
</div>
